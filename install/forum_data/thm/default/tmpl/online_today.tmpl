{ROOT}?t=online_today&rand={FUNC: get_random_value()}&{DEF: _rsid}
{SECTION: END}

{SECTION: no_view_perm}
{MSG: no_view_perm}
{SECTION: END}

{SECTION: reg_user_link_lnk}
